---
interface Props {
  quote: string;
  author: string;
  role?: string;
}

const { quote, author, role } = Astro.props as Props;
---

<figure class="quote-card">
  <div class="quote-mark" aria-hidden="true">â€œ</div>
  <blockquote>
    <p>{quote}</p>
  </blockquote>
  <figcaption>
    <span class="author">{author}</span>
    {role && <span class="role">{role}</span>}
  </figcaption>
</figure>

<style>
  .quote-card {
    position: relative;
    display: grid;
    gap: 1rem;
    padding: 1.5rem;
    border-radius: 1.25rem;
    background: linear-gradient(135deg, rgba(151, 71, 255, 0.08), rgba(255, 255, 255, 0.05)), var(--gray-999);
    border: 1px solid var(--gray-800);
    box-shadow: var(--shadow-md);
    isolation: isolate;
  }

  .quote-card::before {
    content: '';
    position: absolute;
    inset: 0.35rem;
    border-radius: 1rem;
    background: radial-gradient(circle at 20% 20%, rgba(255, 255, 255, 0.1), transparent 40%),
      radial-gradient(circle at 80% 0%, rgba(151, 71, 255, 0.15), transparent 45%);
    opacity: 0.85;
    z-index: -1;
  }

  .quote-mark {
    font-size: clamp(2rem, 4vw, 3rem);
    color: var(--accent-light);
    line-height: 1;
  }

  blockquote {
    margin: 0;
    color: var(--gray-0);
    font-size: clamp(var(--text-lg), 1.1rem, var(--text-xl));
    line-height: 1.2;
    font-weight: 400;
  }

  figcaption {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem 1rem;
    align-items: baseline;
    color: var(--gray-300);
    font-size: var(--text-sm);
  }

  .author {
    font-weight: 700;
    color: var(--gray-0);
  }

  .role {
    padding: 0.25rem 0.75rem;
    border-radius: 999px;
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid var(--gray-800);
    box-shadow: var(--shadow-xs);
  }

  @media (min-width: 50em) {
    .quote-card {
      padding: 2.25rem;
      grid-template-columns: auto 1fr;
      align-items: start;
      gap: 0.75rem 1.5rem;
    }

    .quote-mark {
      grid-row: span 2;
    }

    blockquote {
      font-size: clamp(var(--text-xl), 1.2vw + 1rem, var(--text-2xl));
    }
  }
</style>
